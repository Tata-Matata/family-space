{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/apps/auth-service/main/main.go",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Debug Postgres Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/apps/auth-service/internal/storage/postgres",
            "env": {
              "TEST_DATABASE_URL": "postgres://auth_user:auth_pass@localhost:5432/auth?sslmode=disable"
            }
          }

    ]
}